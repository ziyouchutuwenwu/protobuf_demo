%%  ~/.erlang.crypt needed on compiling
{erl_opts, [
    encrypt_debug_info,
    {i, "./_build/default/plugins/gpb/include"}
]}.

{plugins, [
    { rebar3_gpb_plugin, "1.10.4" }
]}.

{deps, [
%%  {sync, ".*", {git, "https://github.com/rustyio/sync", {branch, "master"}}}
%%  {cowboy, ".*",{git, "https://github.com/ninenines/cowboy.git", {branch, "master"}}},
%%  {cowboy, "1.0.4",{git, "https://github.com/ninenines/cowboy.git", {tag, "1.0.4"}}}
]}.

{gpb_opts, [
    {recursive, true},
    {i, "proto"},
    {module_name_suffix, "_pb"},
    %{o, "path/to/out_dir"},    %% both .erl and .hrl are generated here
    {o_erl, "src"},
    {o_hrl, "include"},
    {strings_as_binaries, true},
    type_specs
]}.

{pre_hooks, [
    {clean, "rm -rf ./_build/test"}
]}.
{provider_hooks, [
    {pre, [
        {compile, {protobuf, compile}},
        {clean, {protobuf, clean}}
    ]}
]}.
{shell, [{script_file, "on_app_start.erl"}]}.

{cover_enabled, true}.
{eunit_opts, [
    verbose, {
        report,{
            eunit_surefire,[
                {dir,"./_build/test"}
            ]
        }
    }
]}.
